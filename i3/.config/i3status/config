# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "load"
order += "cpu_temperature 0"
order += "disk /"
order += "battery all"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
    status_chr = "âš¡ CHR"
    status_bat = "ðŸ”‹ BAT"
    status_unk = "? UNK"
    status_full = "â˜» FULL"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "load:%1min"
}

disk "/" {
    format = "disk:%avail"
}

cpu_temperature 0 {
    format = "%degreesÂ°C"
}

volume master {
    format = "â™ª: %volume"
    # Check issue with Master + speaker muted
    format_muted = "â™ª: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
