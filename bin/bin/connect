#!/bin/bash

function show_usage() {
    echo "Usage: $0 [ server_name ]" 1>&2;
}

function show_help() {
    echo "Usage: $0 [ server_name ]" 1>&2;
}


if [ $# -lt 1 ]
then
    show_usage
    exit 1
fi

# Default options
ssh_options='-X'
remote_dir=''
mount=false
unmount=false

while [[ $# -gt 0 ]]; do
    opt="$1"
    shift;
    case ${opt} in
        "triton")
            user='perellm1'
            host='triton.aalto.fi'
            ;;
        "james")
            user='perellm1'
            host='james.ics.hut.fi'
            ssh_options='-X -i /home/maikel/.ssh/id_rsa_nopass'
            ;;
        "gpu1")
            user='perellm1'
            host='gpu1.ics.hut.fi'
            ssh_options='-X -i /home/maikel/.ssh/id_rsa_nopass'
            ;;
        "lyta")
            user='perellm1'
            host='lyta.aalto.fi'
            ;;
        "brute")
            user='perellm1'
            host='brute.aalto.fi'
            ;;
        "force")
            user='perellm1'
            host='force.aalto.fi'
            ;;
        "bluecrystal2" | "bc2")
            mountpoint="${HOME}/remoteservers/bluecrystal2/"
            user='mp15688'
            host='bluecrystalp2.bris.ac.uk'
            ;;
        "bluecrystal3" | "bc3")
            mountpoint="${HOME}/remoteservers/bluecrystal3/"
            user='mp15688'
            host='bluecrystalp3.bris.ac.uk'
            ;;
        "bluecrystal4" | "bc4")
            mountpoint="${HOME}/remoteservers/bluecrystal4/"
            user='mp15688'
            host='bc4login.acrc.bris.ac.uk'
            ;;
        "perellonieto")
            mountpoint="${HOME}/remoteservers/perellonieto/"
            user='maikel'
            host='perellonieto.com'
            ;;
        "ul50vt")
            mountpoint="${HOME}/remoteservers/ul50vt/"
            user='maikel'
            host='ul50vt.local'
            ;;
        "uobdell")
            mountpoint="${HOME}/remoteservers/uobdell/"
            user='mp15688'
            host='it064753.wks.bris.ac.uk'
            remote_dir='/'
            ;;
        "tb")
            mountpoint="${HOME}/remoteservers/tb/"
            user='mp15688'
            host='tb'
            remote_dir='/home/'
            ;;
        "strauss")
            mountpoint="${HOME}/remoteservers/strauss/"
            user='mp15688'
            host='strauss'
            ;;
        "thales")
            mountpoint="${HOME}/remoteservers/thales/"
            user='mp15688'
            host='thales'
            remote_dir='/'
            ;;
        "rodan")
            mountpoint="${HOME}/remoteservers/rodan/"
            user='mp15688'
            host='rodan'
            remote_dir='/'
            ;;
        "vimaik")
            mountpoint="${HOME}/remoteservers/vimaik/"
            user='virginia'
            host='vimaik'
            remote_dir='/'
            ;;
        "titanv")
            mountpoint="${HOME}/remoteservers/titanv/"
            user='mp15688'
            host='titanv'
            remote_dir='/home/mp15688/'
            ;;
        "-u"|"--unmount")
            unmount=true
            ;;
        "-m"|"--mount")
            mount=true
            ;;
        *)
            show_help
            exit 0
            ;;
    esac
done

if [ "${mount}" = true ] && [ "${unmount}" = true ] ; then
    echo "Warning: Mount and unmount options are mutually exclusive"
fi

if [ "${mount}" = true ] ; then
    echo "Creating mountpoint ${mountpoint}"
    mkdir -p ${mountpoint}

    echo "Mounting to remote folder ${user}@${host}:${remote_dir}"
    sshfs "${user}@${host}:${remote_dir}" ${mountpoint}
elif [ "${unmount}" = true ] ; then
    echo "Unmounting folder ${mountpoint}"
    fusermount -u ${mountpoint}
else
    echo "Connecting to ${host}"
    ssh "${ssh_options}" "${user}@${host}"
fi

