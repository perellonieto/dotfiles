#!/bin/sh

# depends on pdflatex
# sudo apt-get install pdflatex

for f in `ls ./*.tex`
do
    f=`basename ${f}`
    echo "Converting file $f to pdf"
    pdflatex -interaction nonstopmode "\documentclass[a4paper,11pt]{standalone}\usepackage{booktabs}\pagestyle{empty}\begin{document}\centering\input{${f}}\end{document}"
    #pdfcrop standalone.pdf "${f}.pdf"
    #rm -rf standalone.*
    #mv article.pdf "${f}.pdf"
    mv standalone.pdf "${f}.pdf"
    rm standalone.*
done

